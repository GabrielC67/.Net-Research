<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculator.MainPage">

    <ScrollView>
        <Grid RowDefinitions="Auto,*,*,*,*,*" ColumnDefinitions="*,*,*,*">
    <Label x:Name="resultLabel" Grid.Row="0" Grid.ColumnSpan="4" Text="0" FontSize="Large" HorizontalTextAlignment="End" Padding="10" BackgroundColor="Black" />

    <Button Grid.Row="1" Grid.Column="0" Text="7" Clicked="OnNumberButtonClicked" BackgroundColor="DarkGreen" TextColor="White" Visual="Default"  />
    <Button Grid.Row="1" Grid.Column="1" Text="8" Clicked="OnNumberButtonClicked" BackgroundColor="DarkGreen" TextColor="White" Visual="Default"  />
    <Button Grid.Row="1" Grid.Column="2" Text="9" Clicked="OnNumberButtonClicked" BackgroundColor="DarkGreen" TextColor="White" Visual="Default"  />
    <Button Grid.Row="1" Grid.Column="3" Text="/" Clicked="OnOperatorButtonClicked" BackgroundColor="DarkGreen" TextColor="White" Visual="Default"  />

    <Button Grid.Row="2" Grid.Column="0" Text="4" Clicked="OnNumberButtonClicked" BackgroundColor="DarkGreen" TextColor="White" Visual="Default" />
    <Button Grid.Row="2" Grid.Column="1" Text="5" Clicked="OnNumberButtonClicked" BackgroundColor="DarkGreen" TextColor="White" Visual="Default" />
    <Button Grid.Row="2" Grid.Column="2" Text="6" Clicked="OnNumberButtonClicked" BackgroundColor="DarkGreen" TextColor="White" Visual="Default" />
    <Button Grid.Row="2" Grid.Column="3" Text="*" Clicked="OnOperatorButtonClicked" BackgroundColor="DarkGreen" TextColor="White" Visual="Default" />

    <Button Grid.Row="3" Grid.Column="0" Text="1" Clicked="OnNumberButtonClicked" BackgroundColor="DarkGreen" TextColor="White" Visual="Default" />
    <Button Grid.Row="3" Grid.Column="1" Text="2" Clicked="OnNumberButtonClicked" BackgroundColor="DarkGreen" TextColor="White" Visual="Default" />
    <Button Grid.Row="3" Grid.Column="2" Text="3" Clicked="OnNumberButtonClicked" BackgroundColor="DarkGreen" TextColor="White" Visual="Default" />
    <Button Grid.Row="3" Grid.Column="3" Text="-" Clicked="OnOperatorButtonClicked" BackgroundColor="DarkGreen" TextColor="White" Visual="Default" />

    <Button Grid.Row="4" Grid.Column="0" Text="0" Grid.ColumnSpan="2" Clicked="OnNumberButtonClicked" BackgroundColor="DarkGreen" TextColor="White" Visual="Default" />
    <Button Grid.Row="4" Grid.Column="2" Text="." Clicked="OnNumberButtonClicked" BackgroundColor="DarkGreen" TextColor="White" Visual="Default" />
    <Button Grid.Row="4" Grid.Column="3" Text="+" Clicked="OnOperatorButtonClicked" BackgroundColor="DarkGreen" TextColor="White" Visual="Default" />

    <Button Grid.Row="5" Grid.ColumnSpan="4" Text="=" Clicked="OnEqualsButtonClicked" BackgroundColor="DarkGreen" TextColor="White" Visual="Default" />
    <Button Grid.Row="5" Grid.Column="0" Text="C" Clicked="OnClearButtonClicked" IsVisible="True" BackgroundColor="DarkGreen" TextColor="White" Visual="Default" />
</Grid>
    </ScrollView>

</ContentPage>
